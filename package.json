{
  "name": "stepscalc",
  "version": "1.0.2",
  "description": "Set a goal for the month and use this at any time to calculate how many steps you need to take each day to reach your goal by the end of the month.",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "vitest run --run --coverage",
    "test:watch": "vitest --watch",
    "coverage": "vitest --ui --coverage",
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "clean": "rimraf dist",
    "prettier:check": "prettier --check ./src",
    "typecheck": "tsc --noEmit"
  },
  "homepage": "https://penguinofthunder.github.io/stepscalc/",
  "bugs": "https://github.com/PenguinOfThunder/stepscalc/issues",
  "repository": {
    "url": "https://github.com/PenguinOfThunder/stepscalc.git",
    "type": "git"
  },
  "author": {
    "name": "PenguinOfThunder",
    "url": "https://github.com/PenguinOfThunder"
  },
  "license": "BSD-3-Clause",
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.14.1",
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.1.1",
    "@vitest/ui": "^3.1.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.5",
    "jsdom": "^26.1.0",
    "prettier": "^3.5.3",
    "sass-embedded": "^1.86.1",
    "standard": "^17.1.2",
    "typescript": "^5.8.3",
    "vite": "^6.2.5",
    "vitest": "^3.0.9"
  },
  "dependencies": {
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "chart.js": "^4.4.8",
    "chartjs-plugin-annotation": "^3.1.0",
    "classnames": "^2.5.1",
    "date-fns": "^4.1.0",
    "i18next": "^24.2.3",
    "i18next-browser-languagedetector": "^8.0.4",
    "react": "^19.1.0",
    "react-bootstrap": "^2.10.9",
    "react-bootstrap-icons": "^1.11.5",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.4.1",
    "react-router": "^7.5.2",
    "react-transition-group": "^4.4.5",
    "zustand": "^5.0.3"
  },
  "editorconfig": ".editorconfig",
  "prettier": {
    "arrowParens": "always",
    "tabWidth": 2,
    "endOfLine": "auto",
    "bracketSpacing": true,
    "singleQuote": false,
    "jsxSingleQuote": false,
    "bracketSameLine": true,
    "trailingComma": "none",
    "useTabs": false,
    "proseWrap": "preserve",
    "quoteProps": "consistent",
    "semi": true,
    "htmlWhitespaceSensitivity": "css",
    "singleAttributePerLine": true
  }
}
